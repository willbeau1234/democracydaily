rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to opinion images
    match /opinions/{opinionId}/{allPaths=**} {
      allow read: if true;
      allow write: if true; // Allow uploads for DIY opinions
    }
    
    // Deny access to all other files
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 